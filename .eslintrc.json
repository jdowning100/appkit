{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:all",
    "plugin:@typescript-eslint/stylistic-type-checked",
    "plugin:@typescript-eslint/strict-type-checked",
    "prettier"
  ],
  "parserOptions": {
    "project": ["tsconfig.json"]
  },
  "ignorePatterns": [
    "node_modules",
    "*.config.js",
    "*.config.ts",
    "next-env.d.ts",
    "out",
    "dist",
    ".next",
    ".turbo",
    "examples",
    "coverage",
    ".changeset",
    "playwright-report",
    "*.mock.ts",
    "*.test.ts",
    "scripts/*.js"
  ],
  "rules": {
    "no-console": "off",
  }
}
